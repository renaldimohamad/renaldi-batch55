<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="./assets/Css/testimonial.css" />
    <!-- <link rel="stylesheet" href="./assets/Css/contact.css" /> -->
  </head>
  <body>
    <nav
      class="navbar navbar-expand-lg"
      style="background-color: #f5f3f3; margin-top: 5px"
    >
      <div class="container-fluid">
        <img
          class="me-3"
          src="./assets/Image/download.png"
          style="width: 40px; margin-left: 2rem"
          alt=""
        />
        <a
          href="contact.html"
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link nav-item me-2" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link nav-item me-2" href="/myProject">Add Projoect</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link nav-item me-2 fw-bold"
                href="/testimonial"
              >Testimonials</a>
            </li>
          </ul>

          <a href="/contact">
            <button class="btn btn-dark text-light me-4" type="submit">
              Contact Me
            </button>
          </a>
        </div>
      </div>
    </nav>

    <div class="container pb-5">
      <div class="d-flex align-items-center justify-content-center pt-5 pb-3">
        <h1>My Testimonials</h1>
      </div>

      <div class="d-flex flex-column align-items-center gap-2 mb-4">
        <h3>Rating By Star</h3>

        <div class="d-flex gap-3">
          <button
            class="btn btn-dark"
            onclick="filterTestimonial()"
          >All</button>
          <button class="btn btn-dark" onclick="filterTestimonial(1)">1
            <i class="fa-solid fa-star"></i></button>
          <button class="btn btn-dark" onclick="filterTestimonial(2)">2
            <i class="fa-solid fa-star"></i></button>
          <button class="btn btn-dark" onclick="filterTestimonial(3)">3
            <i class="fa-solid fa-star"></i></button>
          <button class="btn btn-dark" onclick="filterTestimonial(4)">4
            <i class="fa-solid fa-star"></i></button>
          <button class="btn btn-dark" onclick="filterTestimonial(5)">5
            <i class="fa-solid fa-star"></i></button>
        </div>
      </div>

      <div class="row row-gap-4">
        {{#each testimonials}}
          <div class="col-3">
            <div class="card">
              <img src="{{this.image}}" class="card-img-top" alt="image-card" />
              <div class="card-body">
                <p class="card-text">{{this.contens}}</p>

                <footer
                  class="blockquote-footer text-end"
                >{{this.author}}</footer>

                <p class="card-text text-end">{{this.ratting}}
                  <i class="fa-solid fa-star"></i></p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script>
      function filterTestimonial(rating = false) { let url = '/testimonial'; if
      (rating) { url = `${url}?rating=${rating}` }; window.location.href = url;
      }
    </script>
  </body>
</html>