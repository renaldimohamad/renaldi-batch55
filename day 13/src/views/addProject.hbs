    <div class="container">
      <div class="row justify-content-center">
        <h2 class="row justify-content-center fw-bold mt-5 mb-3">
          ADD MY PROJECT
        </h2>
        <div class="col-md-5">
          <form action="/addProject" method="post">
            <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label fw-bold mb-0"
              >Project Name</label>
              <input
                type="text"
                class="form-control custom-input"
                style="outline: white"
                id="inputName"
                name="title"
              />
            </div>

            <div class="row justify-content-center">
              <div class="col-6">
                <div>
                  <label
                    for="exampleFormControlInput1"
                    class="form-label fw-bold mb-0"
                  >Start Date</label>
                  <input
                    type="date"
                    class="form-control custom-input"
                    style="outline: white"
                    id="startDate"
                  />
                </div>
              </div>

              <div class="col-6">
                <div class="mb-3">
                  <label
                    for="exampleFormControlInput1"
                    class="form-label fw-bold mb-0"
                  >End date</label>
                  <input
                    type="date"
                    class="form-control custom-input"
                    style="outline: white"
                    id="endDate"
                  />
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label
                for="exampleFormControlTextarea1"
                class="form-label fw-bold mb-0"
              >Your Message</label>
              <textarea
                class="form-control custom-input"
                style="resize: none"
                id="inputDescription"
                name="content"
                rows="3"
              ></textarea>
            </div>

            <label
              for="exampleFormControlTextarea1"
              class="form-label fw-bold mb-0"
            >Technologies</label>
            <div style="display: flex; flex-direction: row">
              <div class="form-check" style="width: 150px">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="nodeJs"
                  name="tech"
                />
                <label class="form-check-label" for="flexCheckDefault">Node Js</label>
              </div>

              <div class="form-check" style="width: 150px">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="reactJs"
                  name="tech"
                />
                <label class="form-check-label" for="flexCheckDefault">React Js</label>
              </div>
            </div>

            <div
              class="mb-3"
              style="display: flex; flex-direction: row; align-items: center"
            >
              <div class="form-check" style="width: 150px">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="nextJs"
                  name="tech"
                />
                <label class="form-check-label" for="flexCheckDefault">Next Js</label>
              </div>

              <div class="form-check" style="width: 150px">
                <input
                  class="form-check-input"
                  type="checkbox"
                  id="phython"
                  name="tech"
                />
                <label class="form-check-label" for="flexCheckDefault">Type
                  Script</label>
              </div>
            </div>

            <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label fw-bold mb-0"
              >Upload Image</label>
              <input
                class="form-control custom-input"
                type="file"
                id="inputImage"
              />
            </div>

            <div class="col-auto d-flex justify-content-end">
              <form class="d-flex">
                <button
                  class="btn btn-dark text-light"
                  style="border-radius: 30px; padding: 3px; width: 100px"
                  type="submit"
                >
                  Submit
                </button>
              </form>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="new-project">
      <hr />

      <div class="html-content" id="contens">
      </div>
    </div>

