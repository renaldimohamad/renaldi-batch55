<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./assets/Css/contact.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #f5f3f3;">
      <div class="container-fluid">
        <img
          src="./assets/Image/download.png"
          style="width: 40px; margin-right: 12px; margin-left: 30px"
          alt=""
        />
        <a
          href="contact.html"
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/myProject">Add Projoect</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark text-light" type="submit">
              Contact Me
            </button>
          </a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="row justify-content-center">
        <h2 class="row justify-content-center fw-bold mt-5 mb-3">
          GET IN TOUCH
        </h2>
        <div class="col-md-5">
          <form action="" onsubmit="submitData(event)">
            <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label fw-bold mb-0"
              >Name</label>
              <input
                type="text"
                class="form-control custom-input"
                style="outline: white"
                id="exampleFormControlInput1"
                name="name"
                id="inputName"
                required
              />
            </div>
            <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label fw-bold mb-0"
              >Email</label>
              <input
                class="form-control custom-input"
                id="exampleFormControlInput1"
                type="email"
                name="email"
                required
              />
            </div>
            <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label fw-bold mb-0"
              >Phone Number</label>
              <input
                type="text"
                class="form-control custom-input"
                id="exampleFormControlInput1"
                name="phone"
                required
              />
            </div>

            <label
              for="exampleFormControlInput1"
              class="form-label fw-bold mb-0"
            >Subject</label>
            <select
              class="form-select custom-input mb-3"
              aria-label="Default select example"
              type="text"
              name="subject"
              required
            >
              <option selected></option>
              <option value="Frontend Devoloper">Frontend Devoloper</option>
              <option value="Beckend Devoloper">Beckend Devoloper</option>
              <option value="Fullstack Devoloper">Fullstack Devoloper</option>
            </select>

            <div class="mb-3">
              <label
                for="exampleFormControlTextarea1"
                class="form-label fw-bold mb-0"
              >Your Message</label>
              <textarea
                class="form-control custom-input"
                style="resize: none"
                id="exampleFormControlTextarea1"
                rows="3"
                name="message"
                required
              ></textarea>
            </div>

            <div class="col-auto d-flex justify-content-end">
              <div class="d-flex">
                <button
                  class="btn btn-dark text-light"
                  style="border-radius: 30px; padding: 3px; width: 100px"
                  type="submit"
                >
                  Submit
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="./assets/Js/contact.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>