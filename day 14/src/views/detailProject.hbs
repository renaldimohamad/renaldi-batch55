<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <nav class="navbar navbar-expand-lg" style="background-color: #f5f3f3;">
      <div class="container-fluid">
        <img
          src="../assets/Image/download.png"
          style="width: 40px; margin-right: 12px; margin-left: 30px"
          alt="logo"
        />
        <a
          href="contact.html"
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link fw-bold" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/addProject">Add Projoect</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/testimonial">Testimonials</a>
            </li>
          </ul>
          <a href="/contact">
            <button class="btn btn-dark text-light" type="button">
              Contact Me
            </button>
          </a>
        </div>
      </div>
    </nav>

    <div class="container mt-4 px-5">
      <h1 class="text-center">{{detail.name}}</h1>
      <div class="row mt-5">
        <div class="col-lg-6">
          <img
            src="../assets/Image/images.jpg"
            class="img-fluid"
            style="width: 100%;"
            alt="project-image"
          />
        </div>
        <div class="col-lg-6 pt-lg-0 pt-4 px-lg-5">
          {{! Section 1 - Duration }}
          <div>
            <h2 class="mb-3">
              Duration
            </h2>
            <div class="d-flex align-items-center gap-2 mb-3">
              <i class="fa-solid fa-calendar-days"></i>
              <span>{{detail.start_date}} - {{detail.end_date}}</span>
            </div>
            <div class="d-flex align-items-center gap-2 mb-3">
              <i class="fa-regular fa-clock"></i>
              <span>{{detail.duration}} Month</span>
            </div>
          </div>

          <!-- Section 2 -Technologies -->
          <div class="mt-4">
            <h2 class="mb-3">
              Technologies
            </h2>
            <div class="d-flex gap-3">
              {{#if detail.technologies}}
                {{#each this.detail.technologies}}
                  <img
                    src="../assets/Icons/{{this}}-icon.png"
                    alt="tech-icon"
                    style="width: 32px; height: 32px;"
                  />
                {{/each}}
              {{else}}
                <span>-</span>
              {{/if}}
            </div>
          </div>

        </div>

        <p
          class="lh-1.1 mt-4"
          style="text-align: justify"
        >{{detail.description}}</p>
      </div>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>

</html>